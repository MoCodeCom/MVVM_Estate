<Page x:Class="Estate.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Estate.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel x:Name="connnectionControl" Margin="0,-100,0,0" >
            <Button x:Name="connectionBtn" Content="Refresh Database connection" Visibility="Hidden"></Button>
            <Label x:Name="connectionDatabaseState" Visibility="Hidden"></Label>
        </StackPanel>
        
        <Image Source="pack://application:,,,/Model/Images/House.png" 
               Width="100" Height="100"></Image>
        <TextBlock FontSize="20" Padding="10" FontWeight="Bold">Manage Property Now Easy</TextBlock>
    </StackPanel>
</Page>
